<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_number_must_start_with_1</fullName>
    <active>false</active>
    <errorConditionFormula>NOT(REGEX(  Phone , &quot;^\\+1\\d{10}$&quot;))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Phone number should start with +1 and contains 10 digits</errorMessage>
</ValidationRule>
