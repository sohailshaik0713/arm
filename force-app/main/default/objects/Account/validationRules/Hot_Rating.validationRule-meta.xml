<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Hot_Rating</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISPICKVAL( Rating , &apos;Hot&apos;),AnnualRevenue &lt;= 100000)</errorConditionFormula>
