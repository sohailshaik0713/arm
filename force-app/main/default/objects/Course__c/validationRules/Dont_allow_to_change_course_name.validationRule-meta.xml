<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Dont_allow_to_change_course_name</fullName>
    <active>false</active>
    <errorConditionFormula>NOT(AND(
    ISNEW(),
    ISPICKVAL(Mode_of_Training__c, &quot;Online&quot;)
))</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>&quot;You are not allowed to change the Course Name for a new course created. The Mode of Training must be set to Online.&quot;</errorMessage>
</ValidationRule>
